{
  "instance_type": "small",
  "description": "Configuration for small instances (≤10k books, ≤100 libs)",
  "population_size": 200,
  "generations": 500,
  "time_limit_sec": 300,
  "mutation": {
    "initial_prob": 0.7,
    "final_prob": 0.3,
    "adaptation_type": "fitness_based",
    "decay_factor": 0.95,
    "increase_factor": 1.1,
    "stagnation_threshold": 0.001
  },
  "crossover": {
    "rate": 0.8,
    "types": ["order_preserving", "order_crossover"],
    "weights": [0.6, 0.4]
  },
  "selection": {
    "tournament_size": 12,
    "methods": ["tournament", "roulette", "rank"],
    "weights": [3.0, 2.0, 1.0]
  },
  "immigration": {
    "initial_frac": 0.05,
    "max_frac": 0.3,
    "stagnation_multiplier": 1.5,
    "stagnation_threshold": 10,
    "diversity_threshold": 0.1
  },
  "local_search": {
    "initial_tweak_steps": 7,
    "final_tweak_steps": 3,
    "adaptation_schedule": "linear_decay"
  },
  "steady_state": {
    "ratio": 0.5,
    "switch_generation": 250,
    "switch_time_ratio": 0.5
  },
  "diversity": {
    "enabled": true,
    "measurement_interval": 5,
    "min_threshold": 0.1,
    "trigger_immigration": true
  }
}
